<%-include ('../layouts/adminheader.ejs')%>
<h1>Add a page</h1>
<a href ='/admin/pages' class="btn btn-primary">Back to all pages</a>
<br /><br />

<form method="post" action="/admin/add-page">
  <div class="form-group">
    <label for="">Title</label>
    <input
      type="text"
      class="form-control"
      name="title"
      value="<%= title %>"
      placeholder="Title"
    />
  </div>

  <div class="form-group">
    <label for="">Slug</label>
    <input
      type="text"
      class="form-control"
      name="slug"
      value="<%= slug %>"
      placeholder="Slug"
    />
  </div>

  <div class="form-group">
    <label for="">Content</label>
    <textarea
      name="content"
      class="form-control"
      id="ta"
      cols="30"
      rows="10"
      required="true"
      placeholder="Content">
      <%= content %>
    </textarea>
  </div>
  <br>

  <button class="btn btn-primary">Submit</button>
</form>
<%-include ('../layouts/adminfooter.ejs')%>